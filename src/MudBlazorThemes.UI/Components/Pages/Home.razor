@inject IThemeStateService themeState
@page "/"
@using System.Text.RegularExpressions

@if (_cssTableSwitch)
{
    <style>
        .mud-table-toolbar {
            background-color: var(--mud-palette-drawer-background) !important;
            color: var(--mud-palette-drawer-text) !important;
        }
    </style>
}
<HeadContent>
    <meta name="description" content="MudBlazor Theme Creator lets you customize Material Design themes, import Bootswatch themes, or create your own themes for the MudBlazor library." />
    <meta property="og:description" content="MudBlazor Theme Creator lets you customize Material Design themes, import Bootswatch themes, or create your own themes for the MudBlazor library." />
</HeadContent>
<PageTitle>MudBlazor Theme Manager Creator</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12">
        <MudPaper Class="px-4 py-2 mud-width-full" Elevation="2" MinHeight="100px" Height="100%">

            <MudStack Row="true" Class="my-5" AlignItems="AlignItems.Center" Justify="Justify.Center" Wrap="Wrap.Wrap">

                <MudStack Row>
                    <MudAvatar Color="Color.Default" Class="my-auto">M</MudAvatar>
                    <MudAvatar Color="Color.Primary" Class="my-auto">U</MudAvatar>
                    <MudAvatar Color="Color.Secondary" Class="my-auto">D</MudAvatar>
                    <MudAvatar Color="Color.Tertiary" Class="my-auto">B</MudAvatar>
                    <MudAvatar Color="Color.Info" Class="my-auto">L</MudAvatar>
                    <MudAvatar Color="Color.Success" Class="my-auto">A</MudAvatar>
                    <MudAvatar Color="Color.Warning" Class="my-auto">Z</MudAvatar>
                    <MudAvatar Color="Color.Surface" Class="my-auto">O</MudAvatar>
                    <MudAvatar Color="Color.Error" Class="my-auto">R</MudAvatar>
                </MudStack>

                <MudStack Row Class="mx-10">
                    <MudAvatar Color="Color.Surface" Class="my-auto">T</MudAvatar>
                    <MudAvatar Color="Color.Surface" Variant="Variant.Text" Class="my-auto">H</MudAvatar>
                    <MudAvatar Color="Color.Surface" Class="my-auto">E</MudAvatar>
                    <MudAvatar Color="Color.Surface" Variant="Variant.Text" Class="my-auto">M</MudAvatar>
                    <MudAvatar Color="Color.Surface" Class="my-auto">E</MudAvatar>
                </MudStack>

                <MudStack Row>
                    <MudAvatar Color="Color.Success" Variant="Variant.Outlined" Class="my-auto">C</MudAvatar>
                    <MudAvatar Color="Color.Warning" Variant="Variant.Outlined" Class="my-auto">R</MudAvatar>
                    <MudAvatar Color="Color.Error" Variant="Variant.Outlined" Class="my-auto">E</MudAvatar>
                    <MudAvatar Color="Color.Info" Variant="Variant.Outlined" Class="my-auto">A</MudAvatar>
                    <MudAvatar Color="Color.Success" Variant="Variant.Outlined" Class="my-auto">T</MudAvatar>
                    <MudAvatar Color="Color.Warning" Variant="Variant.Outlined" Class="my-auto">O</MudAvatar>
                    <MudAvatar Color="Color.Error" Variant="Variant.Outlined" Class="my-auto">R</MudAvatar>
                </MudStack>
            </MudStack>

            <MudContainer Style="text-align: center;">
                <MudText Typo="Typo.body2">
                    This tool allows you to create a custom theme for MudBlazor. You can customize the theme colors,
                    typography, and other settings. The tool will generate a theme class or CSS that you can use in your MudBlazor
                    project. The tool is still in development and may have bugs or missing features. Please report any issues
                    on the GitHub repository. Click
                    <MudLink Href="/about">here</MudLink> to learn more about this tool.
                </MudText><br />
                <MudText Class="mb-n2 mt-n4" Typo="Typo.caption">
                    <MudStack Row Spacing="3" Wrap="Wrap.Wrap" Justify="Justify.Center">
                        <span><b>Mudblazor Version</b>: @mudVersion</span>
                        <div class="tooltip-arrow tooltip-info tooltip-large" style="border-bottom: 1px dotted currentColor; cursor: help;"
                             data-tooltip="MudEx controls used: MudExDialog for Color Picker and MudExCodeView for Code Snippets on Export page.">
                            <span><b>MudEx Version</b>: @mudExVersion</span>
                        </div>                        
                        <div>
                            <span class="d-flex d-sm-none"><b>Current Breakpoint</b>: Xs</span>
                            <span class="d-none d-sm-flex d-md-none"><b>Current Breakpoint</b>: Sm</span>
                            <span class="d-none d-md-flex d-lg-none"><b>Current Breakpoint</b>: Md</span>
                            <span class="d-none d-lg-flex d-xl-none"><b>Current Breakpoint</b>: Lg</span>
                            <span class="d-none d-xl-flex"><b>Current Breakpoint</b>: Xl</span>
                        </div>
                    </MudStack>
                </MudText>
                <br />
                <MudText Class="mb-n2 mt-n4" Typo="Typo.caption">
                    <b>Supporting V7.x.x and V8.x.x of MudBlazor</b>
                </MudText>
            </MudContainer>
        </MudPaper>
    </MudItem>
    <!-- Buttons Section -->
    <MudItem xs="12">
        <MudPaper Class="pa-4" Elevation="2">
            <MudText Typo="Typo.h6" Class="mb-4">Buttons</MudText>
            <MudText>
                <b>Filled: </b>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ma-2">Primary</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Secondary" Class="ma-2">Secondary</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Tertiary" Class="ma-2">Tertiary</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Surface" Class="ma-2">Surface</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Dark" Class="ma-2">Dark</MudButton>
                <MudButtonGroup Color="Color.Tertiary" Variant="Variant.Filled">
                    <MudButton>@_buttonText</MudButton>
                    <MudMenu Icon="@Icons.Material.Filled.ArrowDropDown" Style="align-self: auto;">
                        <MudMenuItem OnClick="() => SetButtonText(0)">Reply</MudMenuItem>
                        <MudMenuItem OnClick="() => SetButtonText(1)">Reply All</MudMenuItem>
                        <MudMenuItem OnClick="() => SetButtonText(2)">Forward</MudMenuItem>
                        <MudMenuItem OnClick="() => SetButtonText(3)">Reply & Delete</MudMenuItem>
                    </MudMenu>
                </MudButtonGroup>
            </MudText>
            <br />
            <MudText>
                <b>Outlined: </b>
                <MudButton Variant="Variant.Outlined" Color="Color.Error" Class="ma-2">Error</MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Info" Class="ma-2">Info</MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Success" Class="ma-2">Success</MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Warning" Class="ma-2">Warning</MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Transparent" Class="ma-2">Transparent</MudButton>
                <MudButtonGroup OverrideStyles="false" Variant="Variant.Outlined">
                    <MudButton Color="Color.Tertiary" OnClick="@(() => _activeButtonId = 0)" Variant="@(_activeButtonId == 0 ? Variant.Filled : Variant.Outlined)">All</MudButton>
                    <MudButton Color="Color.Tertiary" OnClick="@(() => _activeButtonId = 1)" Variant="@(_activeButtonId == 1 ? Variant.Filled : Variant.Outlined)">Active</MudButton>
                    <MudButton Color="Color.Tertiary" OnClick="@(() => _activeButtonId = 2)" Variant="@(_activeButtonId == 2 ? Variant.Filled : Variant.Outlined)">InActive</MudButton>
                </MudButtonGroup>
            </MudText>
            <MudText>
                <b>Text: </b>
                <MudButton Variant="Variant.Text" Class="ma-2"><MudText Typo="Typo.subtitle1">Subtitle1</MudText></MudButton>
                <MudButton Variant="Variant.Text" Class="ma-2"><MudText Typo="Typo.subtitle2">Subtitle2</MudText></MudButton>
                <MudButton Variant="Variant.Text" Class="ma-2"><MudText Typo="Typo.body1">Body1</MudText></MudButton>
                <MudButton Variant="Variant.Text" Class="ma-2"><MudText Typo="Typo.body2">Body2</MudText></MudButton>
                <MudButton Variant="Variant.Text" Class="ma-2"><MudText Typo="Typo.caption">Caption</MudText></MudButton>
                <MudButton Variant="Variant.Text" Class="ma-2"><MudText Typo="Typo.overline">Overline</MudText></MudButton>
            </MudText>
        </MudPaper>
    </MudItem>

    <!-- Text Fields Section -->
    <MudItem xs="12" md="6" xl="4">
        <MudPaper Class="card-standard" Elevation="2">
            <MudText Typo="Typo.h5" Class="mb-4">Text Fields</MudText>
            <MudTextField T="string" Label="Standard" Variant="Variant.Text" Class="mb-2" />
            <MudTextField T="string" Label="Filled" Variant="Variant.Filled" Class="mb-2" />
            <MudTextField T="string" Label="Outlined" Variant="Variant.Outlined" Class="mb-2" />
            <MudTextField T="string" Label="Shrink Label" ShrinkLabel="true" HelperText="Helper Text" Class="mb-2" />
            <MudTextField T="string" Label="Password" InputType="InputType.Password" Class="mb-2" />
        </MudPaper>
    </MudItem>

    <MudItem xs="12" md="6" xl="4">
        <!-- Select and Autocomplete Section -->
        <MudPaper Class="card-standard" Elevation="2">
            <MudText Typo="Typo.h5" Class="mb-4">Select and Autocomplete</MudText>
            <MudSelect T="int" Value="1" Label="Select" Class="mb-2">
                <MudSelectItem Value="1">Option 1</MudSelectItem>
                <MudSelectItem Value="2">Option 2</MudSelectItem>
                <MudSelectItem Value="3">Option 3</MudSelectItem>
            </MudSelect>
            <MudAutocomplete T="string" Label="Autocomplete" SearchFunc="@Search1" />
            <br />
            <!-- Date and Time Pickers -->
            <MudText Typo="Typo.h5" Class="mt-4">Date and Time Pickers</MudText>
            <MudDatePicker Label="Date picker" Class="mb-2" />
            <MudTimePicker Label="Time picker" Class="mb-2" />
            <br />
        </MudPaper>
    </MudItem>

    <MudItem xs="12" md="6" xl="4">
        <!-- Switches and Checkboxes -->
        <MudPaper Class="card-standard" Elevation="2">
            <MudText Typo="Typo.h5" Class="mb-4">Switches, Checkboxes, Sliders </MudText>
            <MudSwitch T="bool" Value="true" Label="Switch" Color="Color.Primary" Class="mb-2" />
            <MudCheckBox T="bool" Value="true" Label="Checkbox" Color="Color.Secondary" Class="mb-2" />
            <MudRadioGroup T="int" Value="1">
                <MudRadio Value="1" Color="Color.Primary">Option 1</MudRadio>
                <MudRadio Value="2" Color="Color.Secondary">Option 2</MudRadio>
            </MudRadioGroup>
            <MudSlider T="double" Step=".1" Min="0" Max="30" ValueLabel="true" ValueLabelFormat="N1"
                       @bind-Value="@_slider1" Variant="Variant.Filled">
                Volume: @_slider1.ToString("N1")
            </MudSlider>
            <MudSlider T="double" Step=".1" Min="0" Max="99" Size="Size.Medium"
                       @bind-Value="_slider2" Variant="Variant.Filled">
                Cash: @_slider2.ToString("C")
            </MudSlider>
        </MudPaper>
    </MudItem>

    <!-- Alerts -->
    <MudItem xs="12" md="6" xl="4">
        <MudPaper Class="card-standard" Elevation="2">
            <MudText Typo="Typo.h5" Class="mb-4">Alerts</MudText>
            <MudAlert Severity="Severity.Normal" Class="mb-2">Normal Alert</MudAlert>
            <MudAlert Severity="Severity.Info" Class="mb-2">Info Alert</MudAlert>
            <MudAlert Severity="Severity.Success" Class="mb-2">Success Alert</MudAlert>
            <MudAlert Severity="Severity.Warning" Class="mb-2">Warning Alert</MudAlert>
            <MudAlert Severity="Severity.Error">Error Alert</MudAlert>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" md="6" xl="4">
        <!-- Badges -->
        <MudPaper Class="card-standard" Elevation="2">
            <MudText>
                <b>Badges</b>
                <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceEvenly">
                    <MudBadge Content="3" Overlap="true" Class="mx-6 my-4">
                        <MudIcon Icon="@Icons.Material.Filled.Email" />
                    </MudBadge>
                    <MudBadge Content="100" Color="Color.Primary" Overlap="true" Class="mx-6 my-4">
                        <MudIcon Icon="@Icons.Material.Filled.Email" />
                    </MudBadge>
                    <MudBadge Icon="@Icons.Material.Filled.Lock" Color="Color.Error" Overlap="true" Bordered="true" Class="mx-6 my-4">
                        <MudButton Variant="Variant.Filled" DropShadow="false">Security</MudButton>
                    </MudBadge>
                    <MudBadge Dot="true" Class="mx-6 my-4">
                        <MudText>Bugs</MudText>
                    </MudBadge>
                </MudStack>
            </MudText>
            <!-- Breadcrumbs -->
            <MudText>
                <b>Breadcrumbs: </b>
                <MudBreadcrumbs Items="@(new List<BreadcrumbItem>{new BreadcrumbItem("Home", href: "#"), new BreadcrumbItem("Link 1", href: "#"), new BreadcrumbItem("Link 2", href: null, disabled: true)})" />
            </MudText>
            <MudText>
                <b>MudChips: </b>
                <MudChipSet T="Color" @bind-SelectedValues="_selectedColors" CheckMark SelectionMode="SelectionMode.MultiSelection">
                    <MudChip Text="Primary" Color="Color.Primary" Value="@Color.Primary">Primary</MudChip>
                    <MudChip Text="Secondary" Color="Color.Secondary" Value="@Color.Secondary">Secondary</MudChip>
                    <MudChip Text="Tertiary" Color="Color.Tertiary" Value="@Color.Tertiary">Tertiary</MudChip>
                </MudChipSet>
            </MudText>
            <MudText>
                <b>Links: </b><br />
                <MudLink Href="#" Underline="Underline.Hover">Home Page</MudLink> - Underline.Hover<br />
                <MudLink Href="#" Underline="Underline.Always">Home Page</MudLink> - Underline.Always
            </MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" md="6" xl="4">
        <!-- Cards -->
        <MudPaper Elevation="2" Class="card-standard">
            <MudCard Class="pa-4" Elevation="2">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Card - Title Area</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>Card content goes here.</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">Action</MudButton>
                </MudCardActions>
            </MudCard>
            <MudText Class="pt-3 pb-2" Typo="Typo.h5">Menus</MudText>
            <MudMenu Class="pr-4" Label="Open Menu">
                <MudMenuItem>Enlist</MudMenuItem>
                <MudMenuItem>Barracks</MudMenuItem>
                <MudMenuItem>Armory</MudMenuItem>
            </MudMenu>

            <MudMenu Label="Open Dense Menu" Dense="true">
                <MudMenuItem>Dense Stuff</MudMenuItem>
                <MudMenuItem>Stuff is Dense</MudMenuItem>
                <MudMenuItem>Soo Dense</MudMenuItem>
            </MudMenu>
            <br />
            <MudMenu Class="pr-4" Label="Default Menu Width" Variant="Variant.Filled">
                <MudMenuItem IconSize="Size.Small" IconColor="Color.Primary" Disabled="true" Icon="@Icons.Material.Filled.Chair">Chair</MudMenuItem>
                <MudMenuItem IconSize="Size.Small" Icon="@Icons.Material.Filled.DoorFront">Door</MudMenuItem>
                <MudMenuItem IconSize="Size.Small" IconColor="Color.Secondary" Icon="@Icons.Material.Filled.Window">Window</MudMenuItem>
            </MudMenu>

            <MudMenu Label="Full Menu Width" Variant="Variant.Filled" FullWidth="true">
                <MudMenuItem>1</MudMenuItem>
                <MudMenuItem>2</MudMenuItem>
                <MudMenuItem>3</MudMenuItem>
            </MudMenu>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" md="6" xl="4">
        <MudPaper Class="card-standard" Elevation="2">
            <MudText Typo="Typo.h5" Class="px-4">Progress Bars</MudText>
            <MudStack Row Justify="Justify.SpaceEvenly" AlignItems="AlignItems.Center">
                <MudProgressCircular Size="Size.Small" Indeterminate="true" />
                <MudProgressCircular Size="Size.Medium" Indeterminate="true" />
                <MudProgressCircular Size="Size.Large" Indeterminate="true" />
                <MudProgressCircular Style="height:70px;width:70px;" Indeterminate="true" />
            </MudStack>
            <MudProgressLinear Indeterminate="true" Class="my-7 mb-4 mt-4" Size="Size.Small" />
            <MudProgressLinear Indeterminate="true" Class="my-7" Size="Size.Medium" />
            <MudText Typo="Typo.h5" Class="px-4">Skeletons</MudText>
            <MudSkeleton />
            <MudSkeleton SkeletonType="SkeletonType.Circle" Width="30px" Height="30px" />
            <MudSkeleton SkeletonType="SkeletonType.Rectangle" Animation="Animation.Wave" Height="58px" />
        </MudPaper>
    </MudItem>
    <MudItem xs="12" md="6" xl="4">
        <MudPaper Class="card-standard" Elevation="2">
            <MudNavMenu>
                <MudText Typo="Typo.h5" Class="px-4">Nav Menu</MudText>
                <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">Secondary Text</MudText>
                <MudDivider Class="my-2" />
                <MudNavLink Href="/">Dashboard</MudNavLink>
                <MudNavLink Href="/Style">Servers</MudNavLink>
                <MudNavLink Href="/Style" Disabled="true">Billing</MudNavLink>
                <MudNavGroup Title="Settings" Expanded="true">
                    <MudNavLink Href="/Style">Users</MudNavLink>
                    <MudNavLink Href="/Style">Security</MudNavLink>
                </MudNavGroup>
                <MudNavLink Href="/about">About</MudNavLink>
            </MudNavMenu>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" md="6" xl="4">
        <MudPaper Class="card-standard" Elevation="2">
            <MudText Typo="Typo.h5" Class="px-4">List</MudText>
            <MudList T="string">
                <MudListItem Text="Inbox" Icon="@Icons.Material.Filled.Inbox" />
                <MudListItem Text="Sent" Icon="@Icons.Material.Filled.Send" />
                <MudListItem Text="Drafts" Disabled="true" IconColor="Color.Info" Icon="@Icons.Material.Filled.Drafts" />
                <MudDivider />
                <MudListItem Text="Trash" SecondaryText="Removed e-mails" />
                <MudListItem Text="Spam" SecondaryText="E-mails from common providers" />
            </MudList>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" md="6" xl="4">
        <MudPaper Class="card-standard" Elevation="2">
            <MudText Typo="Typo.h5" Class="px-4">Tabs</MudText>
            <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
                <MudTabPanel Text="Tab One">
                    <MudText>Content One</MudText>
                </MudTabPanel>
                <MudTabPanel Text="Tab Two">
                    <MudText>Content Two</MudText>
                </MudTabPanel>
                <MudTabPanel Text="Tab Three">
                    <MudText>Content Three</MudText>
                </MudTabPanel>
                <MudTabPanel Text="Tab Disabled" Disabled="true">
                    <MudText>Content Disabled</MudText>
                </MudTabPanel>
            </MudTabs>
            <MudTabs Elevation="2" Rounded="true" Centered="true" Color="@Color.Primary" PanelClass="pa-6">
                <MudTabPanel Text="One">
                    <MudText>Content One</MudText>
                </MudTabPanel>
                <MudTabPanel Text="Two">
                    <MudText>Content Two</MudText>
                </MudTabPanel>
            </MudTabs>
        </MudPaper>
    </MudItem>
    <!-- Treeview -->
    <MudItem xs="12" md="6" xl="4">
        <MudPaper Class="card-standard">
            <MudText Typo="Typo.h5">Treeview</MudText>
            <MudTreeView T="string">
                <MudTreeViewItem Value='"All Mail"' Icon="@Icons.Material.Filled.Email" />
                <MudTreeViewItem Value='"Drafts"' Icon="@Icons.Material.Filled.Drafts" />
                <MudTreeViewItem Value='"Orders"' Icon="@Icons.Material.Filled.Label" IconColor="Color.Secondary" />
                <MudTreeViewItem Value='"Categories"' Icon="@Icons.Custom.Uncategorized.Folder" IconExpanded="@Icons.Custom.Uncategorized.FolderOpen" IconColor="Color.Info"
                                 ExpandButtonIcon="@Icons.Material.Filled.ArrowRight" ExpandButtonIconColor="Color.Primary">
                    <MudTreeViewItem Value='"Social"' Icon="@Icons.Material.Filled.Group" />
                    <MudTreeViewItem Value='"Updates"' Icon="@Icons.Material.Filled.Info" IconColor="Color.Tertiary" />
                    <MudTreeViewItem Value='"Forums"' Icon="@Icons.Material.Filled.QuestionAnswer" />
                    <MudTreeViewItem Value='"Spam"' Icon="@Icons.Material.Filled.LocalOffer" />
                </MudTreeViewItem>
                <MudTreeViewItem Value='"Trash"' Icon="@Icons.Material.Filled.Delete" />
            </MudTreeView>
        </MudPaper>
    </MudItem>
    <!-- Toolbar -->
    <MudItem xs="12" md="6" xl="4">
        <MudPaper Class="card-standard" Elevation="2">
            <MudText Typo="Typo.h5" Class="px-4">Toolbar</MudText>
            <MudToolBar>
                <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="Color.Inherit" Class="mr-5" />
                <MudIconButton Icon="@Icons.Material.Outlined.Add" />
                <MudIconButton Icon="@Icons.Material.Outlined.Edit" />
                <MudIconButton Icon="@Icons.Material.Outlined.Remove" />
                <MudIconButton Icon="@Icons.Material.Outlined.Notifications" />
                <MudIconButton Icon="@Icons.Material.Outlined.PeopleAlt" />
                <MudIconButton Icon="@Icons.Material.Outlined.MoreVert" Color="Color.Inherit" />
            </MudToolBar>
            <MudText>
                <b>With Tooltips:</b><br />
                <MudToolBar>
                    <MudTooltip Text="Menu">
                        <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="Color.Inherit" Class="mr-5" />
                    </MudTooltip>
                    <MudTooltip Text="Add">
                        <MudIconButton Icon="@Icons.Material.Outlined.Add" />
                    </MudTooltip>
                    <MudTooltip Text="Edit">
                        <MudIconButton Icon="@Icons.Material.Outlined.Edit" />
                    </MudTooltip>
                    <MudTooltip Text="Remove">
                        <MudIconButton Icon="@Icons.Material.Outlined.Remove" />
                    </MudTooltip>
                    <MudTooltip Text="Notifications">
                        <MudIconButton Icon="@Icons.Material.Outlined.Notifications" />
                    </MudTooltip>
                    <MudTooltip Text="User Profile">
                        <MudIconButton Icon="@Icons.Material.Outlined.PeopleAlt" />
                    </MudTooltip>
                    <MudTooltip Text="More...">
                        <MudIconButton Icon="@Icons.Material.Outlined.MoreVert" Color="Color.Inherit" />
                    </MudTooltip>
                </MudToolBar>
            </MudText>
        </MudPaper>
    </MudItem>
    <!-- Typography -->
    <MudItem xs="12" md="6" xl="6">
        <MudPaper Class="card-standard" Style="max-height: 600px !important;">
            <MudText Typo="Typo.h5">Typography</MudText>
            <MudText Typo="Typo.h1">h1. Heading</MudText>
            <MudText Typo="Typo.h2">h2. Heading</MudText>
            <MudText Typo="Typo.h3">h3. Heading</MudText>
            <MudText Typo="Typo.h4">h4. Heading</MudText>
            <MudText Typo="Typo.h5">h5. Heading</MudText>
            <MudText Typo="Typo.h6">h6. Heading</MudText>
