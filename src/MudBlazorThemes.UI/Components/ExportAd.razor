<MudPaper Elevation="2" Class="pa-4 mb-4 mud-width-full">
    <MudContainer Style="text-align: center;">
        @Ads
    </MudContainer>
</MudPaper>    

@code {
    private RenderFragment Ads
    {
        get
        {
            RenderFragment form = b =>
            {
                b.OpenElement(0, "ins");
                b.AddAttribute(0, "class", "adsbygoogle");
                b.AddAttribute(1, "style", "display:block;text-align:center;");
                b.AddAttribute(2, "data-ad-layout", "in-article");
                b.AddAttribute(3, "data-ad-format", "fluid");
                b.AddAttribute(4, "data-ad-client", "ca-pub-9521363170451553");
                b.AddAttribute(5, "data-ad-slot", "2818831845"); 
                b.CloseElement();
                b.OpenElement(0, "script");
                b.AddContent(0, "(adsbygoogle = window.adsbygoogle || []).push({});");
                b.CloseElement();
            };
            return form;
        }
    }
}
